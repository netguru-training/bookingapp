.row
  .col-sm-10.col-sm-offset-1
    .row
      .col-sm-6
        %h2.text-center
          %span.label.label-default
            Your places
        .list-group
          - places.each do |place|
            = link_to place, class: 'list-group-item' do
              %h4.list-group-item-heading
                = place.name
              %p.list-group-item-text
                = place.description
      .col-sm-6
        %h2.text-center
          %span.label.label-info
            Places you rented
        .list-group
          - places.each do |place|
            = link_to place, class: 'list-group-item' do
              %h4.list-group-item-heading
                = place.name
              %p.list-group-item-text
                = place.description
