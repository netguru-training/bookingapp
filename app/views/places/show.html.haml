%h2
  %b= place.name

%p= place.description
%p= place.price
%p
  Average rating:
  = place.average_rating
= simple_form_for booking do |f|
  = f.input :place_id, as: :hidden, input_html: {value: place.id}
  = f.input :date_from, as: :string
  = f.input :date_to, as: :string
  = f.button :submit


- place.reviews.each do |review|
  .well
    %b=review.content
    %p=review.user.email
    %p
      Rating:
      =review.rating
    -if review.user == current_user
      %p=link_to 'Edit review', edit_place_review_path(place, review)
-if place.user != current_user and current_user.reviews.find_by_place_id(place.id) == nil
  = render 'reviews/form'
%p= place.city
%p= place.street


= link_to 'Back to places', places_path
- if place.owned_by?(current_user)
  |
  = link_to 'Edit', edit_place_path(place)
