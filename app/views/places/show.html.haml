%h2
  %b= place.name

%p= place.description
%p= place.price
%p= place.average_rating
- place.reviews.each do |review|
  .well
    %b=review.content
    %p=review.user.email
    %p 
      Rating:
      =review.rating

= render 'reviews/form'

= link_to 'Back to places', places_path
- if place.owned_by?(current_user)
  |
  = link_to 'Edit', edit_place_path(place)
